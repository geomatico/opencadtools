%map ExecuteMap
%%
// A task begins life in suspended animation.

Initial
	Entry {
		selection();
		setQuestion("ROTAR" + "\n" +
		"Precise punto base");
		setDescription(new String[]{"Cancelar"});

		}
	Exit{
		}

	{
		addPoint(pointX:double,pointY:double)
			First {
				setQuestion("Precise angulo de rotacion");
				setDescription(new String[]{"Cancelar"});
				addPoint(pointX,pointY);
				}
	}
First{
	addValue(d:double)
		Second{
			setDescription(new String[]{"Cancelar"});
			addValue(d);
			end();
			refresh();
			}
	addPoint(pointX:double,pointY:double)
		Second {
			setDescription(new String[]{"Cancelar"});
			addPoint(pointX,pointY);
			end();
			refresh();
			}
}
Second{
}
Default
{
	addOption(s:String)
		[s.equals("Cancelar")]
		Initial{
			end();
			}
}
